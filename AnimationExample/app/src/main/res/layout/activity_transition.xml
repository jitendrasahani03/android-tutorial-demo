<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shared_layout"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".TransitionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/shared_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Jitendra"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:transitionName="shared_transition_name" />

        <ImageView
            android:id="@+id/shared_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_launcher_background"
            android:transitionName="shared_transition_image" />
    </LinearLayout>

    <TextView
        android:id="@+id/circular_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orangeBorder"
        android:gravity="center"
        android:visibility="invisible" />
</RelativeLayout>