<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first_text_view"
        android:text="First Block"
        android:background="@color/black"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/second_text_view"
        android:text="Second Block"
        android:textSize="20sp"
        android:background="#E42828"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/third_text_view"
        android:text="Third Block"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="#FF5722"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forth_text_view"
        android:text="Forth Block"
        android:textSize="20sp"
        android:background="#FFC107"
        android:textColor="@color/white"
        android:layout_toLeftOf="@id/first_text_view"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fifth_text_view"
        android:text="Fifth Block"
        android:textSize="20sp"
        android:background="#FFC107"
        android:textColor="@color/white"
        android:layout_above="@id/second_text_view"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sixth_text_view"
        android:text="Sixth Block"
        android:textSize="20sp"
        android:background="#009688"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_above="@id/third_text_view"
       />

</RelativeLayout>